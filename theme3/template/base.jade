html
    +h.i18n('Home', '首页', 'zh_cn')
    +h.i18n('Categories', '分类', 'zh_cn')
    +h.i18n('Archive', '归档', 'zh_cn')
    +h.i18n('Tags', '标签', 'zh_cn')
    +h.i18n('About', '关于', 'zh_cn')
    +h.i18n('Links', '友链', 'zh_cn')
	link(href='https://fonts.googleapis.com/css?family=Josefin+Sans|Julius+Sans+One|Lato|Karla',rel='stylesheet')
    head
        +h.headers
        block title
            title= post.title or site.title
        +h.load('markdown')
        +h.load('/template/style.scss')
    body
        .m-main
            +pure
                +pure(1, 1, 1, 0.2)
                    aside.m-sidebar
                        .sidebar-wrap
                            .m-header
                                h1.site-title
                                    a(href="/?status=loaded") {{ site.title }}
                                nav.nav
                                    for category in  posts.categories
                                        a(href=category.url)= category.title
                                        br
                            .side-box
                                +site.socials
                            .side-box.side-search
                                .side-content
                                    form.search-form(action='')
                                        input.input(type='search', name='s')
                                        button(type='submit')
                                            i.fa.fa-search
                            .side-box.side-tags
                                .side-content
                                    for tag_name, tag_count in site.tags
                                        a.side__a.tag-item(role="tags",href="/tags/{{ tag_name }}")= tag_name
                +pure(1, 1, 1, 0.8)
                    .content
                        block content
        footer.footer
            p
                a(href="https://www.sollrei.me/") @sollrei
            p
                a(href="https://bitcron.com/?s=f", target="_blank") Proudly published with Bitcron！

        +h.load('font')